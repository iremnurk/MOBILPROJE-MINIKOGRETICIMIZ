<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC0CB"
    tools:context="minikogreticimiz.minikogreticimiz.MatematikSayfaiki">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFC0CB">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="183dp"
            android:background="#FFC0CB">

        </com.google.android.youtube.player.YouTubePlayerView>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="82dp"
            android:textColor="#C71585"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Videoları İzleyip Çıkarma İşlemini Öğrenelim " />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="52dp"
            android:background="#DB7093"
            android:onClick="btn_matiki"
            android:text="SORU ÇÖZELİM :)"
            android:textColor="#C71585" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button9"
            android:layout_centerHorizontal="true"
            android:textColor="#C71585"
            android:textStyle="italic"
            android:text="ÖĞRENDİKLERİNİ TEST ETMEYE NEDERSİN" />

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/textView2"
            android:layout_toStartOf="@+id/button9"
            android:src="@drawable/minimouse" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginEnd="14dp"
            android:src="@drawable/minimouse" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
