<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDEAD"
    tools:context="minikogreticimiz.minikogreticimiz.HikayeZamani">

    <RelativeLayout
        android:background="#FFDEAD"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@+id/textView24"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="#FFDEAD"
            android:onClick="btn_hikaye1"
            app:srcCompat="@drawable/hikaye1" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageButton1"
            android:textColor="	#cc0099"
            android:layout_marginStart="12dp"
            android:layout_marginTop="19dp"
            android:textStyle="italic"
            android:text="Hikayeler için resimlere tıkla :)" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="26dp"
            android:background="#FFDEAD"
            android:onClick="btn_hikaye2"
            app:srcCompat="@drawable/aslan" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView24"
            android:layout_below="@+id/textView24"
            android:layout_marginStart="72dp"
            android:layout_marginTop="23dp"
            android:textColor="#32CD32"
            android:text="@string/hikaye1_name" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageButton2"
            android:layout_centerHorizontal="true"
            android:textColor="#800000"
            android:text="@string/hikaye2_name" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
